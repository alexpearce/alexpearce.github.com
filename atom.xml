---
layout: nil
---
<?xml version="1.0"?>
<feed xmlns="http://www.w3.org/2005/Atom">
  <title>alexpearce.me</title>
  <subtitle>Blog of developer and physicist Alex Pearce.</subtitle>
  <link href="http://alexpearce.me/" />
  <link type="application/atom+xml" rel="self" href="http://alexpearce.me/atom.xml" />
  <updated>{{ site.time | date_to_xmlschema }}</updated>
  <id>http://alexpearce.me/</id>
  <author>
    <name>Alex Pearce</name>
    <email>alex@alexpearce.me</email>
  </author>

  {% for post in site.posts %}
  <entry>
    <id>http://alexpearce.me{{ post.id }}</id>
    <link type="text/html" rel="alternate" href="http://alexpearce.me{{ post.url }}" />
    <title>{{ post.title }}</title>
    <updated>{{ post.date | date_to_xmlschema }}</updated>
    <author>
      <name>Alex Pearce</name>
      <email>alex@alexpearce.me</email>
    </author>
    <content type="html">{{ post.content | xml_escape }}</content>
  </entry>
  {% endfor %}

</feed>
